<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TakeawayChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chili_pepper</item>
        <item name="colorPrimaryVariant">@color/red_devil</item>
        <item name="colorOnPrimary">@color/cantaloupe</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chili_pepper</item>
        <item name="colorSecondaryVariant">@color/red_devil</item>
        <item name="colorOnSecondary">@color/cantaloupe</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ModuleTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/chili_pepper</item>
